<div class="container m-3 d-flex justify-content-center col-sm-12">
	<%= form_for @id_event do |f| %>
    <%= @id_event.title %>
		
		<div class="form-group" style="width:500px">
			 <%= label_tag(:event_title, "Titre:") %>
			<%= f.text_field :title, class: "form-control"%>
		</div>
        <div class="form-group" style="width:500px">
			 <%= label_tag(:event_price, "Prix:") %>
			<%= f.text_field :price, class: "form-control"%>
		</div>
        <div class="form-group" style="width:500px">
			 <%= label_tag(:event_location, "Location:") %>
			<%= f.text_field :location, class: "form-control"%>
		</div>
        <div class="form-group" style="width:500px">
			 <%= label_tag(:event_duration, "Duration:") %>
			<%= f.text_field :duration, class: "form-control"%>
		</div>

		<div class="form-group">
			<%= label_tag(:event_start_date, "Date:") %>
			<%= f.date_field :start_date, class: "form-control"%>
		</div>
        <div class="form-group">
			<%= label_tag(:event_description, "Description:") %>
			<%= f.text_area :description, class: "form-control"%>
		</div>
    
		
        <div class="col-sm-12 d-flex justify-content-center  m-3">
			<%= f.submit "Post Again", class: "btn btn-primary"%>
		</div>
        <%end%>

       